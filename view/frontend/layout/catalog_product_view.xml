<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Renga_CustomLinkProduct::css/product-carousels.css"/>
    </head>
    <body>
        <referenceContainer name="content.aside">
            <block class="Renga\CustomLinkProduct\Block\Product\SimilarProducts" name="catalog.product.similar" template="Renga_CustomLinkProduct::product/similar_products.phtml" after="catalog.product.related">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Similar Products</argument>
                </arguments>
            </block>
            <block class="Renga\CustomLinkProduct\Block\Product\RepairProducts" name="catalog.product.repair" template="Renga_CustomLinkProduct::product/repair_products.phtml" after="catalog.product.similar">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Repair Parts</argument>
                </arguments>
            </block>
            <block class="Renga\CustomLinkProduct\Block\Product\FunctionalProducts" name="catalog.product.functional" template="Renga_CustomLinkProduct::product/functional_products.phtml" after="catalog.product.repair">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Functional Equivalents</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
